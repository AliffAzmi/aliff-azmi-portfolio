{
  "name": "@sveltejs/kit",
  "version": "1.0.0-next.444",
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltejs/kit",
    "directory": "packages/kit"
  },
  "license": "MIT",
  "homepage": "https://kit.svelte.dev",
  "type": "module",
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "cookie": "^0.5.0",
    "devalue": "^2.0.1",
    "kleur": "^4.1.4",
    "magic-string": "^0.26.2",
    "mime": "^3.0.0",
    "node-fetch": "^3.2.4",
    "sade": "^1.8.1",
    "set-cookie-parser": "^2.4.8",
    "sirv": "^2.0.2",
    "tiny-glob": "^0.2.9",
    "undici": "^5.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.0",
    "@types/connect": "^3.4.35",
    "@types/cookie": "^0.5.1",
    "@types/marked": "^4.0.3",
    "@types/mime": "^3.0.0",
    "@types/node": "^16.11.36",
    "@types/sade": "^1.7.4",
    "@types/set-cookie-parser": "^2.4.2",
    "marked": "^4.0.16",
    "rollup": "^2.75.7",
    "svelte": "^3.48.0",
    "svelte-preprocess": "^4.10.6",
    "tiny-glob": "^0.2.9",
    "typescript": "^4.7.4",
    "uvu": "^0.5.3",
    "vite": "^3.0.9"
  },
  "peerDependencies": {
    "svelte": "^3.44.0",
    "vite": "^3.0.0"
  },
  "bin": {
    "svelte-kit": "svelte-kit.js"
  },
  "files": [
    "src",
    "!src/**/*.spec.js",
    "!src/packaging/test",
    "!src/core/**/fixtures",
    "!src/core/sync/create_manifest_data/test",
    "types",
    "svelte-kit.js"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./src/exports/index.js",
      "types": "./types/index.d.ts"
    },
    "./node": {
      "import": "./src/exports/node/index.js"
    },
    "./node/polyfills": {
      "import": "./src/exports/node/polyfills.js"
    },
    "./hooks": {
      "import": "./src/exports/hooks/index.js"
    },
    "./vite": {
      "import": "./src/exports/vite/index.js"
    }
  },
  "types": "types/index.d.ts",
  "engines": {
    "node": ">=16.9"
  },
  "scripts": {
    "build": "npm run types",
    "lint": "prettier --check . --config ../../.prettierrc --ignore-path .gitignore",
    "check": "tsc",
    "check:all": "tsc && pnpm -r --filter=\"./**\" check",
    "format": "npm run lint -- --write",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "pnpm run -r --workspace-concurrency 1 --filter=\"./test/**\" test",
    "test:unit": "uvu src \"(spec\\.js|test[\\\\/]index\\.js)\" -i packaging",
    "types": "node scripts/extract-types.js",
    "postinstall": "node svelte-kit.js sync"
  }
}